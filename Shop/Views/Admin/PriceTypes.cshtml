@model IEnumerable<Shop.Models.PriceTypeViewModel>  

@{
    ViewBag.Title = "Типы цен";
}

@if (Model != null)
{
    <table class="table table-bordered">
        <tr>
            <th>id</th>
            <th>Наименование</th>
            <th></th>
        </tr>
        @foreach (var pType in Model)
        {
            <tr>
                <td>
                    @pType.Id
                </td>
                <td>
                    @pType.Name
                </td>
                <td>
                    @Html.ActionLink("Изменить", "PriceType", new { id = pType.Id })
                </td>
            </tr>
        }
    </table>

    <input type="button" value="Добавить" onclick="location.href='@Url.Action("AddPriceType")'" />

}



